<% provide(:title, "Sign in") %>
<div id="loading"></div>

<div id="contentContainer">
<div id="content">
<h1>Sign in</h1>
	<%= form_for(:session, url: sessions_path) do |f| %>

      <%= f.label :email %>
      <%= f.text_field :email %>
		<br />
      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.submit "Sign in" %>
    <% end %>

    <p>New user? <%= link_to "Sign up now!", signup_path %></p>
 </div>
</div>